<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.istic.mmm.project.Fragment.DetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textSugarsLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textFatLevel"
            android:layout_marginTop="11dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textSaltLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textSugarsLevel"
            android:layout_marginTop="32dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textSaturatedFatLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/textFatLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textSaturatedFatLevel"
            android:layout_marginTop="32dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textIngredientsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="80dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textNutriscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textBarCode"
            android:layout_marginTop="57dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textBarCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textName"
            android:layout_marginTop="25dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="47dp"
            android:text="TextView" />
    </RelativeLayout>

</FrameLayout>
